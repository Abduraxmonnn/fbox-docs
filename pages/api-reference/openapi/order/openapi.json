{
  "openapi": "3.1.0",
  "info": {
    "title": "FiscalBox Integration",
    "description": "A sample API that uses a plant store as an example to demonstrate features in the OpenAPI specification",
    "license": {
      "name": "MIT",
      "identifier": ""
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://fbox.ngrok.io"
    }
  ],
  "security": [],
  "paths": {
    "/order/create": {
      "post": {
        "summary": "Create order",
        "description": "Operation for create order / Продажа, аванс, кредит",
        "operationId": "createOrder",
        "requestBody": {
          "description": "Order create",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrder"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/plants/{id}": {
      "delete": {
        "summary": "Delete plant",
        "description": "Deletes a single plant based on the ID supplied",
        "operationId": "deletePlant",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of plant to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Plant deleted"
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "required": [
          "name",
          "receipt_type"
        ],
        "type": "object",
        "properties": {
          "number": {
            "description": "The order number or id",
            "type": "integer"
          },
          "receipt_type": {
            "description": "The order receipt type",
            "type": "string"
          },
          "products": {
            "type": "array",
            "description": "List of products in the order",
            "items": {
              "$ref": "#/components/schemas/OrderProduct"
            }
          },
          "uuid": {
            "type": "string",
            "description": "uuid number"
          },
          "time": {
            "type": "string",
            "description": "Time in format yyyy-MM-dd HH:mm:ss",
            "example": "2025-01-15 14:30:45",
            "pattern": "^(19|20)\\d\\d-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]) ([01]\\d|2[0-3]):[0-5]\\d:[0-5]\\d$"
          },
          "cashier": {
            "type": "string",
            "description": "Cashier name",
            "example": "Bob Williams"
          },
          "received_cash": {
            "type": "string",
            "description": "received_cash should be provided in tiyin (multiplied by 100)",
            "example": "1,000 UZS -> 100,000 UZS TIYIN"
          },
          "change": {
            "type": "string",
            "description": "Cashier name",
            "example": "Bob Williams"
          },
          "received_card": {
            "type": "string",
            "description": "received_card should be provided in tiyin (multiplied by 100)",
            "example": "1,000 UZS -> 100,000 UZS TIYIN"
          },
          "card_type": {
            "type": "integer",
            "description": "Paid card type\nPersonal card: 2\nCorporate card: 1",
            "example": "1"
          },
          "ppt_id": {
            "type": "string",
            "description": "RRN (Retrieval Reference Number) from the bank pinpad response (Humo, Uzcard).",
            "example": "123456789012"
          },
          "scan2pay_paid": {
            "type": "boolean",
            "description": "Indicates whether the payment was made via the Scan2Pay service. true if yes, otherwise else.",
            "example": false
          },
          "extra_info": {
            "type": "array",
            "description": "List of products in the order",
            "items": {
              "$ref": "#/components/schemas/ExtraInfo"
            }
          },
          "send_email": {
            "type": "boolean",
            "description": "Send order data via email",
            "example": false
          },
          "email": {
            "type": "string",
            "description": "Receiver email for order data",
            "example": "fbox@gmail.com"
          }
        }
      },
      "OrderProduct": {
        "type": "object",
        "required": [
          "name",
          "barcode",
          "amount",
          "unit_name",
          "price",
          "product_price"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "barcode": {
            "type": "string",
            "description": "Product barcode"
          },
          "amount": {
            "type": "integer",
            "description": "Product amount multiplied by 1000"
          },
          "unit_name": {
            "type": "string",
            "description": "Unit name"
          },
          "price": {
            "type": "integer",
            "description": "Total product price multiplied by 100"
          },
          "product_price": {
            "type": "integer",
            "description": "Single product price multiplied by 100"
          },
          "vat": {
            "type": "integer",
            "description": "VAT amount multiplied by 100"
          },
          "vat_percent": {
            "type": "integer",
            "description": "VAT percentage"
          },
          "discount": {
            "type": "integer",
            "description": "Discount amount multiplied by 100"
          },
          "discount_percent": {
            "type": "integer",
            "description": "Discount percentage"
          },
          "other": {
            "type": "integer",
            "description": "Other payments multiplied by 100"
          },
          "labels": {
            "type": "array",
            "description": "List of marking codes",
            "items": {
              "type": "string"
            }
          },
          "class_code": {
            "type": "string",
            "description": "Product class code"
          },
          "package_code": {
            "type": "string",
            "description": "Package code"
          },
          "owner_type": {
            "type": "string",
            "description": "Owner type"
          },
          "comission_info": {
            "type": "object",
            "description": "Commission information",
            "properties": {
              "inn": {
                "type": "string",
                "description": "Commission INN"
              },
              "pinfl": {
                "type": "string",
                "description": "Commission PINFL"
              }
            }
          }
        }
      },
      "NewOrder": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/Order"
          }
        ]
      },
      "ExtraInfo": {
        "type": "object",
        "properties": {
          "phone_number": {
            "type": "string",
            "description": "Phone_number from response PayMe, Click, Uzum. If provided!",
            "example": "+998909999999"
          },
          "qr_payment_id": {
            "type": "string",
            "description": "Product barcode"
          },
          "qr_payment_provider": {
            "type": "string",
            "description": "0141 - PayMe, 0064 - Click, 0161 - Uzum bank, 0187 - Anor bank",
            "example": "0141"
          },
          "scan2pay_id": {
            "type": "string",
            "description": "uuid from /payment/qr_pay/status",
            "example": "49d92156-8f8b-4b93-a12e-77087b177e02"
          }
        }
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}